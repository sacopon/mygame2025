{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["core/*"],
      "@game/*": ["game/*"],
      "@shared/*": ["shared/*"],
      "@shared": ["shared/index.ts"]
    },
    "strict": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
  },
  "include": ["src", "tests"]
}
